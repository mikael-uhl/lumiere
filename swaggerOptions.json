{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "Lumière",
      "version": "1.0.0",
      "description": "Esta API é uma plataforma para o gerenciamento eficiente de mídia como filmes e séries. A API do Lumière permite cadastro e controle de usuários, associação de usuários em grupos, organização de listas de conteúdo em categorias e itens de conteúdo, definição de filas de exibição e possui suporte à autenticação para proteger dados sensíveis."
    },
    "servers": [
      {
        "url": "http://localhost:5000",
        "description": "Endereço da aplicação."
      }
    ],
    "tags": [
      {
        "name": "Autenticação",
        "description": "Rotas relacionadas a autenticação e login"
      },
      {
        "name": "Usuários",
        "description": "Rotas relacionadas a usuários"
      },
      {
        "name": "Grupos",
        "description": "Rotas relacionadas a grupos"
      }
    ],
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "paths": {
      "/auth/login": {
        "post": {
          "summary": "Realiza o login do usuário",
          "tags": ["Autenticação"],
          "description": "Realiza o login do usuário com as credenciais fornecidas.",
          "requestBody": {
            "required": "true",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "description": "Endereço de e-mail (obrigatório)",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "description": "Senha (obrigatória)",
                      "format": "password"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Sucesso. O login foi bem-sucedido. Retorna dados do usuário e o token."
            },
            "401": {
              "description": "Credenciais inválidas."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/users": {
        "post": {
          "summary": "Cria um novo usuário",
          "tags": ["Usuários"],
          "description": "Cria um novo usuário com os dados fornecidos.",
          "requestBody": {
            "required": "true",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "first_name": {
                      "type": "string",
                      "description": "Nome do usuário (obrigatório)",
                      "example": "Mikael"
                    },
                    "last_name": {
                      "type": "string",
                      "description": "Sobrenome do usuário (obrigatório)",
                      "example": "Uhl"
                    },
                    "username": {
                      "type": "string",
                      "description": "Nome de usuário (obrigatório)",
                      "example": "mikaeluhl"
                    },
                    "email": {
                      "type": "string",
                      "description": "Endereço de e-mail (obrigatório)",
                      "format": "email"
                    },
                    "date_of_birth": {
                      "type": "string",
                      "description": "Data de nascimento (no formato YYYY-MM-DD)",
                      "format": "date"
                    },
                    "phone_number": {
                      "type": "string",
                      "description": "Número de telefone"
                    },
                    "profile_image_url": {
                      "type": "string",
                      "description": "URL da imagem de perfil",
                      "format": "uri"
                    },
                    "password": {
                      "type": "string",
                      "description": "Senha (obrigatória)",
                      "format": "password"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Sucesso. Retorna o usuário criado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        },
        "get": {
          "summary": "Retorna todos os usuários",
          "tags": ["Usuários"],
          "description": "Retorna uma lista de todos os usuários cadastrados.",
          "responses": {
            "200": {
              "description": "Sucesso. Retorna a lista de usuários"
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/users/{id}": {
        "get": {
          "summary": "Retorna um usuário pelo ID",
          "tags": ["Usuários"],
          "description": "Retorna um usuário específico com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do usuário a ser recuperado.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sucesso. Retorna o usuário encontrado."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        },
        "put": {
          "summary": "Atualiza um usuário pelo ID",
          "tags": ["Usuários"],
          "description": "Atualiza as informações de um usuário com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do usuário a ser atualizado.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "requestBody": {
            "required": "true",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "first_name": {
                      "type": "string",
                      "description": "Nome do usuário",
                      "example": "Mikael"
                    },
                    "last_name": {
                      "type": "string",
                      "description": "Sobrenome do usuário",
                      "example": "Uhl"
                    },
                    "username": {
                      "type": "string",
                      "description": "Nome de usuário",
                      "example": "mikaeluhl"
                    },
                    "email": {
                      "type": "string",
                      "description": "Endereço de e-mail",
                      "format": "email"
                    },
                    "date_of_birth": {
                      "type": "string",
                      "description": "Data de nascimento (no formato YYYY-MM-DD)",
                      "format": "date"
                    },
                    "phone_number": {
                      "type": "string",
                      "description": "Número de telefone"
                    },
                    "profile_image_url": {
                      "type": "string",
                      "description": "URL da imagem de perfil",
                      "format": "uri"
                    },
                    "password": {
                      "type": "string",
                      "description": "Senha",
                      "format": "password"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Sucesso. Retorna o usuário atualizado."
            },
            "401": {
              "description": "Não autorizado. Token inválido ou ausente."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          },
          "security": [{ "bearerAuth": [] }]
        },
        "delete": {
          "summary": "Exclui um usuário pelo ID",
          "tags": ["Usuários"],
          "description": "Exclui um usuário com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do usuário a ser excluído.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Sucesso. O usuário foi excluído com sucesso."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/users/email/{email}": {
        "get": {
          "summary": "Retorna um usuário pelo e-mail",
          "tags": ["Usuários"],
          "description": "Retorna um usuário específico com base no e-mail fornecido.",
          "parameters": [
            {
              "name": "email",
              "in": "path",
              "required": "true",
              "description": "Nome de usuário do usuário a ser recuperado",
              "schema": {
                "type": "string",
                "format": "email"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sucesso. Retorna o usuário encontrado."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/users/username/{username}": {
        "get": {
          "summary": "Retorna um usuário pelo nome de usuário",
          "tags": ["Usuários"],
          "description": "Retorna um usuário específico com base no nome de usuário fornecido.",
          "parameters": [
            {
              "name": "username",
              "in": "path",
              "required": "true",
              "description": "Nome de usuário do usuário a ser recuperado",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sucesso. Retorna o usuário encontrado."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/users/{id}/groups": {
        "get": {
          "summary": "Retorna os grupos associados ao usuário",
          "tags": ["Usuários"],
          "description": "Retorna um usuário específico com base no nome de usuário fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do usuário a ser recuperado.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sucesso. Retorna todos os grupos associados ao usuário."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/groups": {
        "post": {
          "summary": "Cria um novo grupo",
          "tags": ["Grupos"],
          "description": "Cria um novo grupo com os dados fornecidos.",
          "requestBody": {
            "required": "true",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "group_name": {
                      "type": "string",
                      "description": "Nome do grupo (obrigatório)",
                      "example": "Ledger Domain"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Sucesso. Retorna o grupo criado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        },
        "get": {
          "summary": "Retorna todos os grupos",
          "tags": ["Grupos"],
          "description": "Retorna uma lista de todos os grupos cadastrados e seus respectivos usuários.",
          "responses": {
            "200": {
              "description": "Sucesso. Retorna a lista de grupos"
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/groups/{id}": {
        "get": {
          "summary": "Retorna um grupo pelo ID",
          "tags": ["Grupos"],
          "description": "Retorna um grupo específico e seus usuários associados com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do grupo a ser recuperado.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sucesso. Retorna o grupo encontrado e seus usuários associados."
            },
            "404": {
              "description": "Grupo não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        },
        "put": {
          "summary": "Atualiza um grupo pelo ID",
          "tags": ["Grupos"],
          "description": "Atualiza as informações de um grupo com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do grupo a ser atualizado.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "requestBody": {
            "required": "true",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "group_name": {
                      "type": "string",
                      "description": "Nome do usuário",
                      "example": "Ledger Domain"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Sucesso. Retorna o grupo atualizado."
            },
            "401": {
              "description": "Não autorizado. Token inválido ou ausente."
            },
            "404": {
              "description": "Usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          },
          "security": [{ "bearerAuth": [] }]
        },
        "delete": {
          "summary": "Exclui um grupo pelo ID",
          "tags": ["Grupos"],
          "description": "Exclui um grupo com base no ID fornecido.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": "true",
              "description": "ID do grupo a ser excluído.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Sucesso. O grupo foi excluído com sucesso."
            },
            "404": {
              "description": "Grupo não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      },
      "/groups/:groupId/users/:userId": {
        "post": {
          "summary": "Adiciona um usuário a um grupo",
          "tags": ["Grupos"],
          "description": "Adiciona um usuário a um grupo com os ids fornecidos.",
          "parameters": [
            {
              "name": "groupId",
              "in": "path",
              "required": "true",
              "description": "ID do grupo.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            },
            {
              "name": "userId",
              "in": "path",
              "required": "true",
              "description": "ID do usuário.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Sucesso. Retorna os dados do usuário e grupo. Um membro de grupo é criado."
            },
            "404": {
              "description": "Grupo ou usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        },
        "delete": {
          "summary": "Deleta um usuário de um grupo",
          "tags": ["Grupos"],
          "description": "Deleta um usuário de um grupo com os ids fornecidos.",
          "parameters": [
            {
              "name": "groupId",
              "in": "path",
              "required": "true",
              "description": "ID do grupo.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            },
            {
              "name": "userId",
              "in": "path",
              "required": "true",
              "description": "ID do usuário.",
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sucesso. Usuário removido do grupo com sucesso. Membro de grupo deletado."
            },
            "404": {
              "description": "Grupo ou usuário não encontrado."
            },
            "500": {
              "description": "Erro interno do servidor."
            }
          }
        }
      }
    }
  },
  "apis": ["./src/routes/*.js"]
}
